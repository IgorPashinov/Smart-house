        android:id="@+id/DataTime"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:paddingTop="20dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        />
    <TextView
    android:id="@+id/Door"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:paddingTop="20dp"
    android:textAlignment="center"
    android:textColor="@color/colorPrimary"
    />
</LinearLayout>