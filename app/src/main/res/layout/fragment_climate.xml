<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:gravity="center"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Климат"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:paddingTop="20dp"
        ></TextView>

    <Button
        android:id="@+id/buttonrezim"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="194dp"
        android:layout_height="63dp"
        android:layout_marginStart="106dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="455dp"
        android:text="Режим"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonznachenia"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="303dp"
        android:layout_height="84dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="106dp"
        android:layout_marginBottom="324dp"
        android:text="Последние значение температуры и влажности"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonrezim"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/buttongraphs"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="194dp"
        android:layout_height="63dp"
        android:layout_marginStart="106dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="112dp"
        android:layout_marginBottom="172dp"
        android:text="Графики"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonznachenia" />

</LinearLayout>